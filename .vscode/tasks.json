   "version": "2.0.0",
   "tasks": [
      {
         "label": "run qemu",
         "type": "shell",
         "command": "${env:HOME}/qemu/bin/qemu-system-xtensa -nographic -M esp32 -m 4 -drive file=${workspaceRoot}/.pio/build/esp32dev/qemu_image.bin,if=mtd,format=raw -nic user,model=open_eth,hostfwd=tcp::7654-:80 -s -S -global driver=timer.esp32.timg,property=wdt_disable,value=true; sleep 2",
//         "isBackground": true
      }
   ]
}