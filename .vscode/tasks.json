   "version": "2.0.0",
   "tasks": [
      {
         "label": "build and run qemu image",
         "type": "shell",
         "command": "./build_qemu.sh -s", // -s for gdb connection
         "problemMatcher": []
      },
      {
         "label": "backtrace decoder",
         "type": "shell",
