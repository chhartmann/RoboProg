{
   // See https://go.microsoft.com/fwlink/?LinkId=733558
   // for the documentation about the tasks.json format
   "version": "2.0.0",
   "tasks": [
      {
         "label": "build qemu image",
         "type": "shell",
         "options": {"cwd":"${workspaceRoot}/build"},
         "command": "/opt/esp/python_env/idf4.4_py3.8_env/bin/python /opt/esp/idf/components/esptool_py/esptool/esptool.py --chip esp32 merge_bin -o merged_qemu.bin --flash_mode dout --flash_size 4MB --fill-flash-size 4MB 0x10000 main.bin 0x1000 bootloader/bootloader.bin 0x8000 partition_table/partition-table.bin 0xe000 ota_data_initial.bin 0x290000 spiffs.bin",
         "problemMatcher": []
      },
      {
         "label": "run qemu - without gdb",
         "type": "shell",
         "command": "qemu-system-xtensa -nographic -M esp32 -m 4 -drive file=${workspaceRoot}/build/merged_qemu.bin,if=mtd,format=raw -nic user,model=open_eth,hostfwd=tcp::7654-:80 -global driver=timer.esp32.timg,property=wdt_disable,value=true",
         "problemMatcher": []
      },
      {
         "label": "run qemu - wait for gdb",
         "type": "shell",
         "command": "qemu-system-xtensa -nographic -M esp32 -m 4 -drive file=${workspaceRoot}/build/merged_qemu.bin,if=mtd,format=raw -nic user,model=open_eth,hostfwd=tcp::7654-:80 -s -S -global driver=timer.esp32.timg,property=wdt_disable,value=true",
         "problemMatcher": []
      }
   ]
}