   "version": "0.2.0",
   "configurations": [
      {
         "name": "Debug with qemu",
         "type": "gdb",
         "executable": "${workspaceRoot}/build/main.elf",
         "request": "attach",
         "target": "localhost:1234",
         "cwd": "${workspaceRoot}",
         "remote": true,
         "gdbpath": "xtensa-esp32-elf-gdb",
         "valuesFormatting": "parseText"
      }
   ]
}